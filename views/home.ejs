<link rel="stylesheet" href="/css/home.css" />
<link rel="stylesheet" href="/css/chat_box.css" />
<link rel="stylesheet" href="/css/post.css" />
<div id="home-container">
  <section id="user-nav">
    <h1>User</h1>
    <% if(locals.user) { %> <% if(user.avatar){ %>
    <img id="profile-image" src="<%= user.avatar %>" alt="<%= user.name %>" />
    <% }else{ %>
    <img
      id="profile-image"
      src="https://png.pngtree.com/element_our/png/20181206/users-vector-icon-png_260862.jpg"
      alt="<%= user.name %>"
    />
    <% } %>
    <p>
      <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
    </p>
    <% } %>
  </section>
  <section id="feed-posts">
    <% if(locals.user){ %>
    <form action="/posts/create" id="new-post-form" method="POST">
      <textarea
        id="form-input"
        name="content"
        cols="40"
        rows="4"
        placeholder="What's on your mind, <%= locals.user.name%>?"
        required
      ></textarea>
      <input type="submit" value="POST" />
    </form>
    <% } %>
    <div id="post-list-container">
      <ul>
        <% for(post of posts){ %> <%- include('_post'); %> <% } %>
      </ul>
    </div>
  </section>
  <section id="user-friends">
    <div id="people">
      <h1>People</h1>
      <% for(u of all_users) { %>
      <p>
        <a href="/users/profile/<%= u.id %>"> <%= u.name %> </a>
      </p>
      <% } %>
    </div>
    <div id="friends">
      <h1>Friends</h1>
      <% for(u of friends){%>
      <p><a href="/users/profile/<%=u.to_user.id%>"><%=u.to_user.name %></a></p>
      <%}%>
    </div>
  </section>
  <!-- <%- include('_chat_box') -%> -->
</div>

<!-- importing this scripts for creating the comments  -->
<script src="/js/home_post_controller.js"></script>
<script src="/js/home_posts.js"></script>
<script src="/js/toggle_likes.js"></script>
